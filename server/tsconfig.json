{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "src",
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["es2022", "DOM"],
    "types": ["node"],
    "noEmit": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
